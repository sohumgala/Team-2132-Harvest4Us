<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amm.harvest4us">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyFirstApp">
        <activity
            android:name=".InventoryActivity"
            android:exported="true" />
        <activity
            android:name=".ProducerActivity"
            android:exported="true" />
        <activity
            android:name=".ProductActivity"
            android:exported="true" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".FarmsActivity"
            android:exported="true"
            android:label="@string/Local_Farms"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay"/>
        <activity
            android:name=".MarketplaceActivity"
            android:exported="true"
            android:label="@string/title_activity_marketplace"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay" />
        <activity
            android:name=".ResourceActivity"
            android:exported="true"
            android:label="Resources"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay" />
        <activity
            android:name=".CartActivity"
            android:exported="true"
            android:label="Cart"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay" />
        <activity
            android:name=".CheckoutActivity"
            android:exported="true"
            android:label="Checkout"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyFirstApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KotlinQuickStartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".PaymentButtonQuickStartActivity"
            android:label="@string/payment_button_quick_start_activity_title" />
        <activity
            android:name=".Success"
            android:exported="true"
            android:label="Success"
            android:theme="@style/Theme.MyFirstApp.AppBarOverlay" />
    </application>

</manifest>