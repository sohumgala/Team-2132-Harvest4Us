<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/harvest4us_beige</item>
        <item name="colorPrimaryVariant">@color/harvest4us_beige</item>
        <item name="colorOnPrimary">@color/mainFont</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/harvest4us_green</item>
        <item name="colorSecondaryVariant">@color/harvest4us_green</item>
        <item name="colorOnSecondary">@color/mainFont</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyFirstApp.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/harvest4us_beige</item>
        <item name="colorPrimaryVariant">@color/harvest4us_beige</item>
        <item name="colorOnPrimary">@color/mainFont</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/harvest4us_green</item>
        <item name="colorSecondaryVariant">@color/harvest4us_green</item>
        <item name="colorOnSecondary">@color/mainFont</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyFirstApp.AppBarOverlay" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/harvest4us_beige</item>
        <item name="colorPrimaryVariant">@color/harvest4us_beige</item>
        <item name="colorOnPrimary">@color/mainFont</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/harvest4us_green</item>
        <item name="colorSecondaryVariant">@color/harvest4us_green</item>
        <item name="colorOnSecondary">@color/mainFont</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyFirstApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>